- set_meta_tags description: default_meta_description
- content_for :header do
  .site-introduction.banner-section.jumbotron
    %h1.banner-heading
      How does your MP vote on the issues that matter to you?

    .banner-action
      %form{action: search_path, method: "get", name: "pw"}
        %label{for: "query"}
          Find your representative by
          %strong postcode
          or
          %strong name
        .input-group
          %input.form-control#query{maxlength: "256", name: "query", type: "search", placeholder: "e.g. #{Member.random_postcode} or #{Member.random_current.name_without_title}"}
          %span.input-group-btn
            %button.btn.btn-primary{name: "button", type: "submit", value: "Submit"} Search

.front-panels-block.banner-section
  .container
    .front-panel.col-md-4
      = render "panel1"
    .front-panel.col-md-4
      = render "panel2"
    .front-panel.col-md-4
      = render "panel3"

.front-quote-block.banner-section
  .container
    = render "quote"
